<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#B3B6B7">


    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="55"
        android:src="@mipmap/kitchen"
        android:background="#FFFFFF"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="45"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:textSize="20sp"
            android:text="@string/newline"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/pric"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:gravity="center|left"
                android:text="$249.99"
                android:textColor="#17202A"

                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".7"
                android:orientation="vertical"
                android:gravity="center">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:hint="$449.99" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"

                    />
        </LinearLayout>

<LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight=".7"
    android:orientation="horizontal"
    >
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".1"
                android:src="@mipmap/stars"
                android:background="#FFFFFF"/>
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".1"
        android:src="@mipmap/stars"
        android:background="#FFFFFF"/>
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".1"
        android:src="@mipmap/stars"
        android:background="#FFFFFF"/>
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".1"
        android:src="@mipmap/stars"
        android:background="#FFFFFF"/>
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".1"
        android:src="@mipmap/stars"
        android:background="#FFFFFF"
        />

</LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:hint="(523)"
                android:textSize="15dp"
                android:gravity="center|left"
                android:layout_height="match_parent"
                android:layout_weight=".3"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="temp price cut"
            android:layout_weight="9"
            android:textColor="#D92737"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="15"
            android:background="#B3B6B7">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="5"
                android:padding="5dp"
                >
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@mipmap/cart"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:background="#FFFFFF"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="add to cart"
                    android:textAlignment="center"
                    android:textColor="#17202A"
                    android:background="#FFFFFF"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="ship free"
                    android:textAlignment="center"
                    android:textColor="#D92737"
                    android:background="#FFFFFF"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="5"
                android:padding="5dp">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@mipmap/store"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:background="#FFFFFF"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:hint="not sold in stores"
                    android:background="#FFFFFF"
                    android:textAlignment="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="5"
                android:padding="5dp">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:src="@mipmap/list"
                    android:layout_gravity="center"
                    android:background="#FFFFFF"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="add to list"
                    android:textAlignment="center"
                    android:textColor="#17202A"
                    android:background="#FFFFFF"
                    />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>